<!DOCTYPE html>
<html>
  <head>
    <!DOCTYPE html>
    <title>Bookers</title>
     <%= csrf_meta_tags %>
     <%= csp_meta_tag %>

     <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head>

  <body>
  <header class = "naver naver-fixed-top nabar-inverse">
    <div class = "container">
      <nav class="nav navbar-nav navbar-left">
        <span>Bookers</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
            <% if user_signed_in? %>
              <%= link_to "Home", user_path(current_user), class: "glyphicon glyphicon-home home" %>
              <%= link_to "Users", users_path, class: "glyphicon glyphicon-user users" %>
              <%= link_to "Books", books_path, class: "glyphicon glyphicon-book book" %>
              <%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %>
             <% else %>
              <%= link_to "Home", users_path, class: "glyphicon glyphicon-home home" %>
              <%= link_to "About", root_path, class: "glyphicon glyphicon-link about" %>
              <%= link_to "Sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
              <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
             <% end %>
        </ul>
      </nav>
  </header>

    <%= yield %>

  </body>
</html>
