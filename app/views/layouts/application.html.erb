<!DOCTYPE html>
<html>
  <head>
    <!DOCTYPE html>
    <title>Bookers</title>
     <%= csrf_meta_tags %>
     <%= csp_meta_tag %>

     <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head>

  <body>
  <header class = "naver naver-fixed-top nabar-inverse">
    <div class = "container">
      <nav class="nav navbar-nav navbar-left">
        <span>Bookers</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
            <% if user_signed_in? %>
               <a class="glyphicon glyphicon-home home", href="/">
               Home
              </a>
              <a class="glyphicon glyphicon-user users", href="/users">
               Users
              </a>
              <a class="glyphicon glyphicon-book book", href="/books">
               Books
              </a>
              <a class="glyphicon glyphicon-log-out logout", rel="nofollow", deta-method="delete",  href="/">
               logout
              </a>
             <% else %>
              <a class="glyphicon glyphicon-home home", href="/">
               Home
              </a>
              <a class="glyphicon glyphicon-link about", href="/">
               About
              </a>
              <a class="glyphicon glyphicon-edit sign_up", href="/user/sign_up">
               Sign up
              </a>
              <a class="glyphicon glyphicon-log-in sign_in", href="/user/sign_in">
               login
              </a>
             <% end %>
        </ul>
      </nav>
  </header>

    <%= yield %>

  </body>
</html>
