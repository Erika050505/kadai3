<div class="body">
    <div class="container">
      <%=flash[:notice] %>
        <div class="row">
            <div class="col-xs-3">
              <%= render 'layouts/userinfo', book: Book.new, user: @book.user %>
            </div>

            <div class="col-xs-9">
              <h4>Book detail</h4>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <%=link_to  user_path(@book.user.id) do %>
      								<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: " profile-img", fallback: "no_image.jpg", size:'50x50' %>
      								<%= @book.user.name %>
      							<%end%>
                    <th>users</th>
                    <%= @book.title %>
                    <%= @book.body %>
                    <thcolspan="3"></thcolspan>
                    </th>
                    <% if @book.user==current_user %>
                    <td>
                    <%= link_to "Edit", edit_book_path(@book.id) %>
                    </td>
                    <td>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？"%>
                    </td>
                    <%end%>

                  </tr>
                </thead>
              </table>
            </div>
        </div>
    </div>
  </div>