<div class="body">
    <div class="container">
      <%=flash[:notice] %>
        <div class="row">
            <div class="col-xs-3">
              <h1>User info</h1>
                <%= form_for (@user) do |form| %>
                  <%= form.attachment_field :profile_image %>
                  <%= attachment_image_tag @user, :profile_image %>
                <% end %>
                 <table class="table">
                    <tbody>
                      <h4>name     <%= current_user.name %> </h4>
                      <h4>introduction</h4>
                    </tbody>
                 </table>
                 <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></a>

                <h1>New book</h1>
                 <%= form_with model:@book, local:true do |f| %>

                <h4>Title</h4>
                  <%= f.text_field :title %>

                <h4>Opinion</h4>
                  <%= f.text_area :body %>

                  <%= f.submit 'Create Book' %>
            </div>

            <div class="col-xs-9">
              <h4>Book detail</h4>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th>users</th>
                    <%= @book.title %>
                    <%= @book.body %>
                    <thcolspan="3"></thcolspan>
                    </th>
                    <td>
                    <%= link_to "Edit", edit_book_path(@book.id) %>
                    </td>
                    <td>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？"%>
                    </td>
                  </tr>
                </thead>
              </table>
            </div>
        </div>
    </div>
  </div>
<% end %>