<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
              <%= render 'layouts/error_messages', book: @book %>
              <%= render 'layouts/userinfo', book: @book, user: current_user %>
            </div>

            <div class="col-xs-9">
              <h4>Books</h4>

                <table class="table table-hover table-inverse">
                      <th></th>
                      <th>Title</th>
                      <th>Opinion</th>
                    <% @books.each do |book| %>
                      <tr>
                        <td><%=link_to  user_path(book.user.id) do %>
          								<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: " profile-img", fallback: "no_image.jpg", size:'50x50' %>
          							<%end%>
          							</td>
                        <td><span><%= link_to book.title, book_path(book.id) %></span></td>
                        <td><span><%=link_to book.body, book_path(book.id) %></span></td>
                      </tr>
                     <% end %>
                </table>
            </div>
        </div>
    </div>
  </div>
