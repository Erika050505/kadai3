<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
              <%=flash[:notice] %>
              <h1>User info</h1>
                <%= form_for (@user) do |form| %>
                  <%= form.attachment_field :profile_image %>
                  <%= attachment_image_tag @user, :profile_image %>
                <% end %>
                 <table class="table">
                    <tbody>
                      <h4>name     <%= current_user.name %> </h4>
                      <h4>introduction</h4>
                    </tbody>
                 </table>
                 <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></a>

                <h1>New book</h1>
                 <%= form_with model:@book, local:true do |f| %>

                  <h4>Title</h4>
                  <%= f.text_field :title %>

                  <h4>Opinion</h4>
                  <%= f.text_area :body %>

                  <%= f.submit 'Create Book' %>
                 <% end %>
            </div>

            <div class="col-xs-9">
              <h4>Books</h4>

              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @books.each do |book| %>
                    <tr>
                      <td></td>
                      <td><%= book.title %></td>
                      <td><%= book.body %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
  </div>